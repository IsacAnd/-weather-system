{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es2020",
        "sourceMap": true,
        "outDir": "./dist",
        "incremental": true,
        "skipLibCheck": true,
        "strict": false,
        "esModuleInterop": true
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}